# https://www.codechef.com/problems/BNE_APT

import java.util.*;
import java.lang.*;
import java.io.*;

class Codechef
{
	public static void main (String[] args) throws java.lang.Exception
	{
	    Scanner input = new Scanner(System.in);
	    int n = input.nextInt();
	    int m = input.nextInt();
	    int x = input.nextInt();
	    int y = input.nextInt();
	    System.out.println(n*x + m*y);
	}
}
