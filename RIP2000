# https://www.codechef.com/problems/RIP2000

import java.util.*;
import java.lang.*;
import java.io.*;

class Codechef
{
	public static void main (String[] args) throws java.lang.Exception
	{
	    Scanner input = new Scanner(System.in);
	    int n = input.nextInt();
	    System.out.println(n*4);
	}
}
